import java.io.*;
import java.nio.charset.*;

boolean findBuildLogMessage(File basedir, String message)
{
    boolean messageFound = false;
    
    File buildLog = new File(basedir, "build.log");
    if (buildLog.exists() && buildLog.isFile())
    {
        try
        {
            BufferedReader bf = new BufferedReader(new InputStreamReader(new FileInputStream(buildLog), StandardCharsets.UTF_8));
            try
            {
                String line;
                while ((line = bf.readLine()) != null)
                {
                    messageFound = line.equals(message) || line.contains(message);
                    if (messageFound)
                    {
                        break;
                    }
                }
            }
            finally
            {
                bf.close();
            }
        }
        catch (Exception e)
        {
            // ignore
        }
    }
    
    return messageFound;
}

return findBuildLogMessage(basedir, "[ERROR] test key key3 not defined in root bundle but found in bundles for en")
    && findBuildLogMessage(basedir, "Some message bundles contain an inconsistent set of message keys");